{
  "name": "i18n-translator",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build:web": "cd web && npx ng build --configuration production",
    "build:electron": "tsc -p tsconfig.electron.json",
    "watch:electron": "tsc -p tsconfig.electron.json --watch",
    "start:electron": "electron .",
    "dev": "concurrently -k -n TSC,ELE \"npm:watch:electron\" \"npm:start:electron\"",
    "copy:assets": "copyfiles -u 1 web/dist/**/* dist/web",
    "dist": "npm run build:web && npm run build:electron && npm run copy:assets && electron-builder"
  },
  "build": {
    "appId": "com.babelt.babelt",
    "productName": "BabelT",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "asar": true,
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "openai": "^5.1.1",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/node": "^20.6.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  }
}
