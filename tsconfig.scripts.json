{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": false,
		"importHelpers": false,
	},
	"ts-node": {
		"esm": true,
		"loader": "ts-node/esm"
	},
	"include": ["scripts", "src"]
}
